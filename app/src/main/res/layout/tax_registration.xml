<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:background="@drawable/edit_box"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taxation Type"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"/>

        <Spinner
            android:id="@+id/spinnerTax"
            android:layout_width="match_parent"
            android:gravity="start"
            android:hint="Select Category"
            android:clickable="false"
            android:focusable="true"
            android:layout_height="@dimen/_20sdp"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:background="@drawable/edit_box"
        android:layout_height="@dimen/_50sdp">

        <TextView
            android:id="@+id/gstNumber"
            android:layout_width="353dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="Pick GST Number"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/camera_icon"
            android:layout_weight=".4"
            android:id="@+id/pickGalleryCamera" />




    </LinearLayout>


    <ImageView
        android:id="@+id/imageGST"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:visibility="gone"
        android:src="@drawable/camera_icon" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:background="@drawable/edit_box"
        android:layout_height="@dimen/_50sdp">

        <TextView
            android:id="@+id/PanNumber"
            android:layout_width="353dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="Pick Pan Number"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/camera_icon"
            android:layout_weight=".4"
            android:id="@+id/pickCamera" />

    </LinearLayout>
    <ImageView
        android:id="@+id/imagePan"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/camera_icon" />
    <Button
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_margin="@dimen/_5sdp"
        android:layout_gravity="center"
        android:background="@drawable/bg_button_rounded"
        android:id="@+id/btnNext"
        android:text="Next"
        />

</LinearLayout>