<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edBankAddress"
        android:layout_width="match_parent"
        android:gravity="start"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/edit_box"
        android:hint="Enter Billing Address"
        android:clickable="false"
        android:focusable="true"
        android:layout_height="@dimen/_50sdp"
        />

    <EditText
        android:id="@+id/edContactPerson"
        android:layout_width="match_parent"
        android:gravity="start"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/edit_box"
        android:hint="Enter Landmark"
        android:clickable="false"
        android:focusable="true"
        android:layout_height="40dp"
        />

    <EditText
        android:id="@+id/edState"
        android:layout_width="match_parent"
        android:gravity="start"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/edit_box"
        android:hint="Enter State"
        android:clickable="false"
        android:focusable="true"
        android:layout_height="40dp"
        />

    <EditText
        android:id="@+id/edPincode"
        android:layout_width="match_parent"
        android:gravity="start"
        android:layout_margin="@dimen/_5sdp"
        android:inputType="number"
        android:maxLength="13"
        android:background="@drawable/edit_box"
        android:hint="Enter Pincode"
        android:clickable="false"
        android:focusable="true"
        android:layout_height="40dp"
        />

    <EditText
        android:id="@+id/edCity"
        android:layout_width="match_parent"
        android:gravity="start"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/edit_box"
        android:hint="Enter City Name"
        android:clickable="false"
        android:focusable="true"
        android:layout_height="40dp"
        />

    <EditText
        android:id="@+id/edCityCode"
        android:layout_width="match_parent"
        android:gravity="start"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/edit_box"
        android:hint="Enter City Code"
        android:clickable="false"
        android:focusable="true"
        android:layout_height="40dp"
        />

    <EditText
        android:id="@+id/edArea"
        android:layout_width="match_parent"
        android:gravity="start"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/edit_box"
        android:hint="Enter Area"
        android:clickable="false"
        android:focusable="true"
        android:layout_height="40dp"
        />


    <!--<EditText
        android:id="@+id/Map"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/edit_box"
        android:hint="MAP"
        android:gravity="center_vertical"
        android:clickable="false"
        android:focusable="true"
        android:layout_height="@dimen/_500sdp"
        />-->



    <fragment
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_500sdp">


        <!--<androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp">
            <fragment
                android:id="@+id/autocomplete_fragment"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />
        </androidx.cardview.widget.CardView>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">



            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:clickable="true"
                android:editable="false"
                android:background="@drawable/edit_box"
                android:layout_weight="0.5"
                android:inputType="textAutoComplete|textAutoCorrect"
                android:hint="Search Location" />

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="0.2"
                android:textColor="@color/white"
                android:id="@+id/search"
                android:src="@drawable/search"
                android:text="Search" />

        </LinearLayout>
    </fragment>

    <Button
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_margin="@dimen/_5sdp"
        android:layout_gravity="center"
        android:background="@drawable/bg_button_rounded"
        android:id="@+id/btnNext"
        android:text="Next"
        />
</LinearLayout>
</ScrollView>